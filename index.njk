---
title: Welcome to Tulish.co
layout: base.njk
---

<section class="hero-slider">
    <div class="slider-container">
        <img src="/assets/images/IMG_0025.jpg" alt="Gastronomy Trip 1" class="slider-image active">
        <img src="/assets/images/IMG_1188.jpg" alt="Cultural Journey 2" class="slider-image">
        <img src="/assets/images/IMG_3044.jpg" alt="Family Adventure 3" class="slider-image">
    </div>
    <div class="hero-content">
        <h1>Welcome to Tulish.co</h1>
        <p>Where Travel Meets Taste</p>
    </div>
</section>

<section class="latest-itineraries">
    <h2>Latest Gastronomic Itineraries</h2>
    <div class="posts-grid">
        {% for post in collections.gastronomicItineraries | reverse %}
            {% if loop.index <= 3 %} {# Display only the latest 3 #}
            <article class="post-card">
                <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
                <p class="meta">{{ post.data.location }} | {{ post.data.duration }}</p>
                {% if post.data.map %}
                <img src="{{ post.data.map }}" alt="Map of {{ post.data.title }}" class="featured-image">
                {% endif %}
                <p>{{ post.content | safe | truncate(150, true, '...') }}</p> {# Short excerpt #}
                <a href="{{ post.url }}" class="read-more">Read More &rarr;</a>
            </article>
            {% endif %}
        {% endfor %}
    </div>
    <div class="all-posts-link">
        <a href="/gastronomic-itineraries/">View All Itineraries &rarr;</a>
    </div>
</section>

<section class="latest-reviews">
    <h2>Latest Restaurant Reviews</h2>
    <div class="posts-grid">
        {% for post in collections.restaurantReviews | reverse %}
            {% if loop.index <= 3 %} {# Display only the latest 3 #}
            <article class="post-card">
                <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
                <p class="meta">{{ post.data.location }} | {{ post.data.cuisine }} | {{ post.data.rating }} Star</p>
                {% if post.data.gallery[0] %}
                <img src="{{ post.data.gallery[0] }}" alt="Photo from {{ post.data.title }}" class="featured-image">
                {% endif %}
                <p>{{ post.content | safe | truncate(150, true, '...') }}</p> {# Short excerpt #}
                <a href="{{ post.url }}" class="read-more">Read More &rarr;</a>
            </article>
            {% endif %}
        {% endfor %}
    </div>
    <div class="all-posts-link">
        <a href="/restaurant-reviews/">View All Reviews &rarr;</a>
    </div>
</section>

<section class="latest-trips">
    <h2>Latest Culture / Family Trips for Sale</h2>
    <div class="posts-grid">
        {% for post in collections.cultureFamilyTrips | reverse %}
            {% if loop.index <= 3 %} {# Display only the latest 3 #}
            <article class="post-card">
                <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
                <p class="meta">{{ post.data.duration }} | {{ post.data.price }}</p>
                {% if post.data.gallery[0] %}
                <img src="{{ post.data.gallery[0] }}" alt="Photo from {{ post.data.title }}" class="featured-image">
                {% endif %}
                <p>{{ post.content | safe | truncate(150, true, '...') }}</p> {# Short excerpt #}
                <a href="{{ post.url }}" class="read-more">View Trip &rarr;</a>
            </article>
            {% endif %}
        {% endfor %}
    </div>
    <div class="all-posts-link">
        <a href="/culture-family-trips/">View All Trips &rarr;</a>
    </div>
</section>

